/* pages/popularization/videoDetails/videoDetails.wxss */

page {
  width: 100%;
  height: 100%;
  position: fixed;
}
.container-video {
  height: 100vh;
  width: 100vw;
}

.animation-wrapper {
  position: relative;
  height: 100vh;
  width: 100vw;
  /* background-color: #000; */
}
.animation-image {
  height: 100vh;
  width: 100vw;
  display: block;
}

.video {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  border: 0;
  position: absolute;
  top: 0;
  left: 0;
}

.tools {
  display: flex;
  position: fixed;
  right: 5rpx;
  bottom: 350rpx;
  /* height: 300px; */
  flex-direction: column;
}
.user-image {
  position: relative
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-add {
  position: absolute;
  top: 92rpx;
  width: 46rpx;
  height: 46rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
}

.icon {
  width: 90rpx;
  height: 90rpx;
}

.right-icon {
  margin: 20rpx 25rpx 0rpx;
}
.text {
  color: white;
  /* width: 100rpx; */
  text-align: center;
  margin: 0rpx 20rpx;
}

.jindu {
  position: fixed;
  bottom: 100rpx;
  height: 5rpx;
  background-color: white;
}

.jindu-back {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 5rpx;
  background-color: gray;
}

.desc {
  position: fixed;
  left: 40rpx;
  bottom: 158rpx;
  width: 600rpx;
}

.desc-content {
  display: flex;
  align-items: center
}

.desc-text {
  color: white;
  font-size: 14px;
  padding: 0 0 0 20rpx;
}

.tag {
  margin-top: 20rpx;
}


.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: 128rpx;
  width: 128rpx;
}



.nodata {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 400rpx;
}